  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug (nodemon)",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/backend/bin/www",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}/backend",
      "runtimeArgs": [
        "--harmony",
        "--no-deprecation"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug",
      "program": "${workspaceFolder}/backend/bin/www",
      "cwd": "${workspaceFolder}/backend",
      "restart": true,
      "runtimeArgs": [
        "--harmony",
        "--no-deprecation"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
