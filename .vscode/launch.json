  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Nodemon",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/backend/bin/www",
      "args": [
        "--config nodemon.json"
      ],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceRoot}\\backend",
      "port": 3000
    }
  ]
}
